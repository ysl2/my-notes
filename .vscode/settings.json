{
  "foam.logging.level": "info",
  //
  "explorer.sortOrder": "type",
  //
  "editor.wrappingIndent": "indent",
  // "editor.overviewRulerBorder": false,
  // "editor.lineHeight": 24,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "git.confirmSync": false,
  "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
  "vscodeMarkdownNotes.slugifyMethod": "github-slugger",
  //
  // 注："files.exclude"是"search.exclude"和"files.watcherExclude"的超集
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // 下面这些是我自己定义的：
    "**/.obsidian": true,
    "**/.history": true,
    // "**/.trash": true,
    // "**/assets": true,
    // "**/entry": true,
    // "**/.gitignore": true,
    // "**/README.md": true,
  },
  //
  //-----------------------------------------------
  // 以下是我自己的插件设置，不是foam的设置
  "md-graph.autoStart": false,
  "md-graph.fileTypes": ["md"],
  "md-graph.graph.defaultMode": "ALL", // 可选项："ALL", "FOCUS"
  "md-graph.graph.fadeDepth": 1,
  "md-graph.graph.focusNeighborDepth": 1,
  "md-graph.openColumn": "one",
  "md-graph.showColumn": "beside",
  //
  "local-history.enabled": 2
}
